{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,
    "declaration": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@majorclaw/shared-types": ["packages/shared-types/src/index.ts"],
      "@majorclaw/router": ["packages/router/src/index.ts"],
      "@majorclaw/db": ["packages/db/src/index.ts"],
      "@majorclaw/mcp-host": ["packages/mcp-host/src/index.ts"]
    }
  }
}
