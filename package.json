{
  "name": "major-claw",
  "private": true,
  "version": "0.1.0",
  "description": "Local mission control for hierarchical OpenClaw agents.",
  "packageManager": "pnpm@10.0.0",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm --filter @majorclaw/desktop-web dev",
    "dev:gateway": "pnpm --filter @majorclaw/gateway dev",
    "dev:all": "pnpm -r --parallel dev",
    "e2e:doctor": "node scripts/e2e-doctor.mjs",
    "e2e": "playwright test -c e2e/config/playwright.config.ts",
    "e2e:critical": "playwright test -c e2e/config/playwright.config.ts --grep @critical",
    "security:smoke": "pnpm --filter @majorclaw/gateway test:security",
    "compat:openclaw": "node scripts/openclaw-compat-check.mjs --mode=local",
    "compat:openclaw:pinned": "node scripts/openclaw-compat-check.mjs --mode=pinned",
    "compat:openclaw:latest": "node scripts/check-openclaw-compat-latest.mjs",
    "compat:refresh": "node scripts/refresh-openclaw-baseline.mjs",
    "compat:check": "node scripts/refresh-openclaw-baseline.mjs --check",
    "compat:strict": "node scripts/refresh-openclaw-baseline.mjs --strict",
    "compat:refresh:dry-run": "node scripts/refresh-openclaw-baseline.mjs --dry-run",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "tsx": "^4.21.0",
    "typescript": "^5.7.3"
  }
}
