{
  "name": "@majorclaw/gateway",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "node --watch src/index.ts",
    "dev:server": "node --watch --import tsx src/server.ts",
    "start": "node dist/server.js",
    "lint": "tsc -p tsconfig.json --noEmit",
    "test": "node --import tsx --test src/**/*.test.ts",
    "test:security": "node --import tsx --test src/server.security.validation.test.ts src/securityRedaction.test.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@majorclaw/db": "workspace:*",
    "@majorclaw/mcp-host": "workspace:*",
    "@majorclaw/router": "workspace:*",
    "@majorclaw/shared-types": "workspace:*",
    "zod": "^4.3.6"
  }
}
